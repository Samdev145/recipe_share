= form_for [@recipe, @comment], remote: true  do |f|
	= f.hidden_field :user_id, :value => @recipe.user.id
	= f.hidden_field :commentable_type, :value => 'Recipe'
	= f.hidden_field :commentable_id, :value => @recipe.id
	.form-group
		= f.label :content
		= f.text_field :content, class: 'form-control'

	%button{ class: 'btn btn-success' }
		Add Comment