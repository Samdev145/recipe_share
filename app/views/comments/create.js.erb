var renderComment = '<%= escape_javascript(render partial: @comment) %>';

<% if @comment.commentable_type == 'Comment' %>
	$('[data-comment-id="' + <%= @comment.commentable.id %> + '"]').find('.comments_list').append(renderComment);
<% else %>
	$('#main').find('.comments_list').first().append(renderComment);
<% end %>
