#recipes
	%ul
		- @recipes.each do |recipe|
			%a{ href: recipe_path(recipe.id) }
				.row
					.recipe
						.col-sm-3.col-xs-4
							.recipe_image
								- if recipe.photo.url
									= image_tag(recipe.photo.thumb)
								- else
									= image_tag('place_holder.jpg')
						.col-sm-8.col-xs-12
							.description
								%p
									= recipe.name
								%p
									= "cuisine: #{recipe.cuisine}"
								- if my_recipes
									= link_to('Edit', edit_recipe_path(recipe.id))